<%- include('../../views/admin/adminHeader') %>


<!-- Button trigger modal -->
<button
  type="button"
  class="btn btn-primary model_btn"
  data-bs-toggle="modal"
  data-bs-target="#exampleModal"
>
  <i class="fa fa-plus"></i> Add
</button>

<!-- Modal -->
<div
  class="modal fade"
  id="exampleModal"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <form action="/insertblog" method="post" enctype="multipart/form-data">
        <div class="modal-body">
          <label for="" name="">Title</label>
          <br />
          <input size="45" type="text" name="title" value="" class="mb-3" />
          <br />
          <label for="" name="">Description</label>
          <br />
          <textarea name="description" rows="4" cols="50"></textarea>
          <br>
          <label for="">Upload Img</label>
          <br />
          <input size="45" type="file" name="image" value="" class="mb-3"  />
          <br />
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary">Save</button>
        </div>
      </form>
    </div>
  </div>
</div>

<div class="col-sm-12 mt-5">
  <div class="container-xl">
    <div class="table-responsive">
      <div class="table-wrapper">
        <div class="table-title">
          <div class="row">
            <div class="col-sm-8">
              <h2>Customer <b>Details</b></h2>
            </div>
            <div class="col-sm-4">
              <div class="search-box">
                <input
                  type="text"
                  class="form-control"
                  placeholder="Search&hellip;"
                />
              </div>
            </div>
          </div>
        </div>
        <table class="table table-striped table-hover table-bordered">
          <thead>
            <tr>
              <!-- <i class="fa fa-sort"></i> -->
              <th>id</th>
              <th>Title</th>
              <th>Description</th>
              <th>Image</th>
              <!-- <th>blog info</th>
              <th>blog details</th> -->
            </tr>
          </thead>
          <tbody>
          <% b.forEach((data)=>{ %>

            <tr>
              <!-- <input type="file" id="myfile" name="myfile"> -->
              <td><%= data._id %></td>
              <td><%= data.title %></td>
              <td><%= data.description %></td>
              <td><img src="<%= data.image.url %>" width="50px" alt="" srcset=""></td>
              <!-- <td>Portland</td>
              <td>97219</td> -->

              <td>
                <a href="/blogview/<%= data._id %>" class="view" title="View" data-toggle="tooltip"
                  ><i class="material-icons">&#xE417;</i></a
                >
                <a href="/blogedit/<%= data._id %>" class="edit" title="Edit" data-toggle="tooltip"
                  ><i class="material-icons">&#xE254;</i></a
                >
                <a href="/admin/blog/delete/<%= data._id %>" class="delete" title="Delete" data-toggle="tooltip"
                  ><i class="material-icons">&#xE872;</i></a
                >
              </td>
            </tr>
        
            <%  })%>
          </tbody>
        </table>
        <div class="clearfix">
          <div class="hint-text">Showing <b>5</b> out of <b>25</b> entries</div>
          <ul class="pagination">
            <li class="page-item disabled">
              <a href="#"><i class="fa fa-angle-double-left"></i></a>
            </li>
            <li class="page-item"><a href="#" class="page-link">1</a></li>
            <li class="page-item"><a href="#" class="page-link">2</a></li>
            <li class="page-item active">
              <a href="#" class="page-link">3</a>
            </li>
            <li class="page-item"><a href="#" class="page-link">4</a></li>
            <li class="page-item"><a href="#" class="page-link">5</a></li>
            <li class="page-item">
              <a href="#" class="page-link"
                ><i class="fa fa-angle-double-right"></i
              ></a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('../../views/admin/adminFooter.ejs') %>
